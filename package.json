  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "postinstall": "npm run bootstrap && npm run build",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "format": "prettier --write '**/*.{js,json,yml,yaml,md,graphql}'",
    "lint": "eslint --ignore-pattern packages '**/*.ts' && lerna run --parallel lint",
    "lint:fix": "eslint --ignore-pattern packages --fix '**/*.ts' && lerna run --parallel lint:fix",
    "watch": "lerna run --parallel watch",
    "publish": "lerna publish --yes patch",
    "publish:minor": "lerna publish --yes minor",
    "publish:major": "lerna publish --yes major",
    "test": "lerna run test && ts-node scripts/merge-coverage.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@types/jest": "26.0.14",
    "@types/node": "14.11.1",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "eslint": "7.9.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lerna": "3.22.1",
    "lint-staged": "10.4.0",
    "prettier": "2.1.2",
    "ts-jest": "26.3.0",
    "ts-node": "9.0.0",
    "typescript": "4.0.3",
    "graphql": "15.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anchan828/gen-graphql-schema.git"
  },
  "bugs": {
    "url": "https://github.com/anchan828/gen-graphql-schema/issues"
  },
  "homepage": "https://github.com/anchan828/gen-graphql-schema#readme"
}
